{
  "name": "orient",
  "version": "1.0.0",
  "packageManager": "pnpm@9.0.0",
  "description": "Orient - Open-source AI project management automation",
  "repository": {
    "type": "git",
    "url": "https://github.com/orient-bot/orient.git"
  },
  "main": "dist/index.js",
  "bin": {
    "orient-coding-mcp": "./dist/mcp-servers/coding-server.js",
    "orient-assistant-mcp": "./dist/mcp-servers/assistant-server.js",
    "orient-core-mcp": "./dist/mcp-servers/core-server.js",
    "orient-update-presentation": "./dist/cli/update-presentation.js",
    "orient-whatsapp": "./dist/packages/bot-whatsapp/src/main.js",
    "orient-slack": "./dist/packages/bot-slack/src/main.js",
    "orient-dashboard-admin": "./dist/cli/dashboard-admin.js"
  },
  "scripts": {
    "build": "tsc",
    "build:opencode-config": "npx tsx scripts/build-opencode-config.ts",
    "prebuild:docker": "npm run build:opencode-config",
    "start": "node dist/packages/bot-slack/src/main.js",
    "start:mcp": "node dist/mcp-servers/coding-server.js",
    "start:mcp:coding": "node dist/mcp-servers/coding-server.js",
    "start:mcp:assistant": "node dist/mcp-servers/assistant-server.js",
    "start:mcp:core": "node dist/mcp-servers/core-server.js",
    "dev": "tsx watch packages/bot-slack/src/main.ts",
    "dev:mcp": "tsx watch src/mcp-servers/coding-server.ts",
    "dev:whatsapp": "tsx watch packages/bot-whatsapp/src/main.ts",
    "dev:slack": "tsx watch packages/bot-slack/src/main.ts",
    "update-presentation": "node dist/cli/update-presentation.js",
    "update-presentation:dev": "tsx src/cli/update-presentation.ts",
    "meeting:new": "tsx src/cli/meeting.ts new",
    "meeting:sync": "tsx src/cli/meeting.ts sync",
    "meeting:list": "tsx src/cli/meeting.ts list",
    "meeting:report": "tsx src/cli/meeting.ts report",
    "workflow:start-week": "tsx src/cli/workflow.ts start-week",
    "workflow:mid-sprint": "tsx src/cli/workflow.ts mid-sprint",
    "workflow:end-week": "tsx src/cli/workflow.ts end-week",
    "whatsapp": "node dist/whatsapp-bot.js",
    "whatsapp:dev": "tsx packages/bot-whatsapp/src/main.ts",
    "slack": "node dist/slack-bot.js",
    "slack:dev": "tsx packages/bot-slack/src/main.ts",
    "dashboard:admin": "tsx src/cli/dashboard-admin.ts",
    "dashboard:build": "pnpm --filter @orient/dashboard-frontend run build && mkdir -p dist/dashboard/frontend && cp -r packages/dashboard-frontend/dist dist/dashboard/frontend/",
    "dashboard:dev": "pnpm --filter @orient/dashboard-frontend run dev",
    "agents:sync": "npx tsx scripts/sync-agent-config.ts",
    "agents:seed": "npx tsx data/seeds/agents.ts",
    "agents:seed:force": "npx tsx data/seeds/agents.ts --force",
    "db:migrate": "for f in data/migrations/*.sql; do echo \"Applying: $f\" && psql $DATABASE_URL < \"$f\"; done",
    "db:migrate:status": "psql $DATABASE_URL -c \"SELECT table_name FROM information_schema.tables WHERE table_schema = 'public' ORDER BY table_name\"",
    "db:seed:all": "npx tsx data/seeds/index.ts",
    "db:seed:all:force": "npx tsx data/seeds/index.ts --force",
    "db:seed:worktree": "./scripts/seed-worktree-db.sh",
    "db:seed:worktree:isolated": "ISOLATED=true ./scripts/seed-worktree-db.sh",
    "build:packages": "pnpm turbo run build --filter='./packages/*'",
    "build:all": "pnpm run build:packages && npm run build && npm run dashboard:build",
    "lint": "eslint 'packages/**/*.ts' 'tests/**/*.ts' --ignore-pattern '**/*.d.ts' --ignore-pattern 'packages/dashboard-frontend/**' --ignore-pattern 'packages/bot-whatsapp/scripts/**'",
    "lint:fix": "eslint 'packages/**/*.ts' 'tests/**/*.ts' --ignore-pattern '**/*.d.ts' --ignore-pattern 'packages/dashboard-frontend/**' --ignore-pattern 'packages/bot-whatsapp/scripts/**' --fix",
    "format": "prettier --write 'packages/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --exclude '**/*.e2e.test.ts' --exclude '**/*.eval.test.ts'",
    "test:unit": "vitest run --exclude '**/*.e2e.test.ts' --exclude '**/*.integration.test.ts'",
    "test:integration": "INTEGRATION_TESTS=true vitest run integration",
    "test:e2e": "E2E_TESTS=true vitest run e2e",
    "test:browser": "E2E_TESTS=true vitest run tests/e2e/browser/",
    "test:browser:watch": "E2E_TESTS=true vitest tests/e2e/browser/",
    "test:services": "vitest run src/services/",
    "test:tools": "vitest run src/tools/",
    "test:ci": "vitest run --exclude '**/*.e2e.test.ts' --exclude '**/*.eval.test.ts'",
    "test:docker:files": "vitest run -c tests/docker/vitest.config.ts tests/docker/",
    "test:docker:build": "vitest run -c tests/docker/vitest.config.ts tests/docker/build.test.ts",
    "doctor": "./scripts/doctor.sh",
    "dev:local": "./run.sh dev",
    "dev:infra": "docker compose -f docker/docker-compose.infra.yml up -d",
    "dev:infra:stop": "docker compose -f docker/docker-compose.infra.yml down",
    "test:docker": "./run.sh test",
    "deploy": "./run.sh deploy",
    "eval": "tsx src/eval/cli.ts",
    "eval:fast": "tsx src/eval/cli.ts --matrix fast",
    "eval:full": "tsx src/eval/cli.ts --matrix full_matrix",
    "eval:ci": "tsx src/eval/cli.ts --ci",
    "test:eval": "vitest run --config vitest.eval.config.ts",
    "eval:watch": "vitest --config vitest.eval.config.ts",
    "prepare": "husky",
    "commit:temp": "TEMP_COMMIT=1 git commit",
    "commit:wip": "git commit --no-verify -m '[wip] Work in progress'"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "slack",
    "jira",
    "project-management",
    "standup",
    "automation",
    "google-slides",
    "presentation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "0.39.0",
    "@hapi/boom": "^10.0.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@orient/agents": "workspace:*",
    "@orient/core": "workspace:*",
    "@orient/database": "workspace:*",
    "@orient/database-services": "workspace:*",
    "@orient/integrations": "workspace:*",
    "@orient/mcp-tools": "workspace:*",
    "@slack/bolt": "^3.18.0",
    "@slack/web-api": "^7.0.0",
    "@types/hapi__boom": "^9.0.1",
    "baileys": "7.0.0-rc.9",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "glob": "^10.3.10",
    "google-auth-library": "^10.5.0",
    "googleapis": "^144.0.0",
    "jira.js": "^4.0.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^3.0.3",
    "oci-sdk": "^2.123.0",
    "open": "^10.2.0",
    "pg": "^8.13.1",
    "pino": "^10.2.0",
    "postgres": "^3.4.8",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.2",
    "@types/qrcode": "^1.5.6",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.15",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.1.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.3",
    "typescript": "^5.3.2",
    "vitest": "^4.0.15",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
