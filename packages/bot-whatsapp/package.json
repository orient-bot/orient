{
  "name": "@orient-bot/bot-whatsapp",
  "version": "1.1.0",
  "description": "WhatsApp bot service for Orient",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "whatsapp-bot": "./dist/main.js"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx --conditions=source src/main.ts",
    "dev:watch": "tsc --watch",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@orient-bot/agents": "workspace:*",
    "@orient-bot/core": "workspace:*",
    "@orient-bot/database": "workspace:*",
    "@orient-bot/database-services": "workspace:*",
    "@orient-bot/mcp-tools": "workspace:*",
    "@types/hapi__boom": "^9.0.1",
    "baileys": "7.0.0-rc.9",
    "express": "^5.0.0",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "@orient-bot/api-gateway": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@vitest/coverage-v8": "^4.0.15",
    "typescript": "^5.3.2",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
