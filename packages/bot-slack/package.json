{
  "name": "@orient/bot-slack",
  "version": "1.0.0",
  "description": "Slack bot service for Orient",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "slack-bot": "./dist/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "dev:watch": "tsc --watch",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@orient/agents": "workspace:*",
    "@orient/core": "workspace:*",
    "@orient/database": "workspace:*",
    "@orient/mcp-tools": "workspace:*",
    "@slack/bolt": "^3.18.0",
    "@slack/web-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.15",
    "typescript": "^5.3.2",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
