{
  "name": "@orientbot/dashboard",
  "version": "1.0.0",
  "description": "Dashboard frontend for Orient",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dashboard": "./dist/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "predev": "node --input-type=module -e \"import {existsSync} from 'fs'; import {resolve, dirname} from 'path'; import {fileURLToPath} from 'url'; const __dirname = dirname(fileURLToPath(import.meta.url)); const db = resolve(__dirname, '../database/dist/index.js'); if(!existsSync(db)){console.error('ERROR: @orientbot/database not built. Run: pnpm --filter @orientbot/database build'); process.exit(1);}\"",
    "dev": "tsx watch --conditions=source --clear-screen=false src/main.ts",
    "dev:watch": "tsc --watch",
    "start": "node dist/main.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@orientbot/agents": "workspace:*",
    "@orientbot/apps": "workspace:^",
    "@orientbot/bot-whatsapp": "workspace:*",
    "@orientbot/core": "workspace:*",
    "@orientbot/database": "workspace:*",
    "@orientbot/database-services": "workspace:*",
    "@orientbot/integrations": "workspace:*",
    "@orientbot/mcp-servers": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "typescript": "^5.4.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
