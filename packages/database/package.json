{
  "name": "@orientbot/database",
  "version": "1.0.0",
  "description": "Database schemas, migrations, and clients for Orient",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js",
      "default": "./dist/schema/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "default": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --testPathPattern='**/*.e2e.test.ts'",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate:sqlite": "drizzle-kit generate --config=drizzle.sqlite.config.ts",
    "db:migrate:sqlite": "drizzle-kit migrate --config=drizzle.sqlite.config.ts",
    "db:push:sqlite": "drizzle-kit push --config=drizzle.sqlite.config.ts",
    "db:studio:sqlite": "drizzle-kit studio --config=drizzle.sqlite.config.ts"
  },
  "dependencies": {
    "@orientbot/core": "workspace:*",
    "better-sqlite3": "^11.7.0",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.13.1",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.2",
    "@vitest/coverage-v8": "^4.0.15",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.3.2",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "drizzle",
    "drizzle.config.ts",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
