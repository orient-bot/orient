{
  "name": "@orient/integrations",
  "version": "1.0.0",
  "description": "External service integrations for Orient (JIRA, Google, etc.)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./jira": {
      "types": "./dist/jira/index.d.ts",
      "import": "./dist/jira/index.js",
      "require": "./dist/jira/index.js",
      "default": "./dist/jira/index.js"
    },
    "./google": {
      "types": "./dist/google/index.d.ts",
      "import": "./dist/google/index.js",
      "require": "./dist/google/index.js",
      "default": "./dist/google/index.js"
    },
    "./gemini": {
      "types": "./dist/gemini/index.d.ts",
      "import": "./dist/gemini/index.js",
      "require": "./dist/gemini/index.js",
      "default": "./dist/gemini/index.js"
    },
    "./openai": {
      "types": "./dist/openai/index.d.ts",
      "import": "./dist/openai/index.js",
      "require": "./dist/openai/index.js",
      "default": "./dist/openai/index.js"
    },
    "./types": {
      "types": "./dist/types/integration.d.ts",
      "import": "./dist/types/integration.js",
      "require": "./dist/types/integration.js",
      "default": "./dist/types/integration.js"
    },
    "./catalog": {
      "types": "./dist/catalog/index.d.ts",
      "import": "./dist/catalog/index.js",
      "require": "./dist/catalog/index.js",
      "default": "./dist/catalog/index.js"
    },
    "./catalog/linear": {
      "types": "./dist/catalog/linear/index.d.ts",
      "import": "./dist/catalog/linear/index.js",
      "require": "./dist/catalog/linear/index.js",
      "default": "./dist/catalog/linear/index.js"
    },
    "./catalog/github": {
      "types": "./dist/catalog/github/index.d.ts",
      "import": "./dist/catalog/github/index.js",
      "require": "./dist/catalog/github/index.js",
      "default": "./dist/catalog/github/index.js"
    },
    "./catalog/google": {
      "types": "./dist/catalog/google/index.d.ts",
      "import": "./dist/catalog/google/index.js",
      "require": "./dist/catalog/google/index.js",
      "default": "./dist/catalog/google/index.js"
    },
    "./catalog/jira": {
      "types": "./dist/catalog/jira/index.d.ts",
      "import": "./dist/catalog/jira/index.js",
      "require": "./dist/catalog/jira/index.js",
      "default": "./dist/catalog/jira/index.js"
    },
    "./catalog/loader": {
      "types": "./dist/catalog/loader.d.ts",
      "import": "./dist/catalog/loader.js",
      "require": "./dist/catalog/loader.js",
      "default": "./dist/catalog/loader.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run copy:manifests",
    "copy:manifests": "for dir in src/catalog/*/; do name=$(basename \"$dir\"); if [ -f \"$dir/INTEGRATION.yaml\" ]; then mkdir -p \"dist/catalog/$name\" && cp \"$dir/INTEGRATION.yaml\" \"dist/catalog/$name/\"; fi; done",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@google/genai": "^1.36.0",
    "@orient/core": "workspace:*",
    "google-auth-library": "^10.5.0",
    "googleapis": "^144.0.0",
    "jira.js": "^4.1.3",
    "js-yaml": "^4.1.0",
    "openai": "^4.104.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.27",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
