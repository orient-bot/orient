{
  "name": "@orient/database-services",
  "version": "1.0.0",
  "description": "Database service implementations for Orient (messages, Slack, scheduler, webhooks)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@orient/core": "workspace:*",
    "@orient/database": "workspace:*",
    "better-sqlite3": "^12.5.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.11.11",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
