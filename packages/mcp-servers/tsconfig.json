{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "../..",
    "paths": {
      "@orientbot/core": ["./packages/core/src/index"],
      "@orientbot/database": ["./packages/database/src/index"],
      "@orientbot/database-services": ["./packages/database-services/src/index"],
      "@orientbot/agents": ["./packages/agents/src/index"],
      "@orientbot/integrations": ["./packages/integrations/src/index"],
      "@orientbot/integrations/*": ["./packages/integrations/src/*"],
      "@orientbot/bot-whatsapp": ["./packages/bot-whatsapp/src/index"],
      "@orientbot/bot-slack": ["./packages/bot-slack/src/index"],
      "@orientbot/mcp-tools": ["./packages/mcp-tools/src/index"],
      "@orientbot/mcp-tools/config": ["./packages/mcp-tools/src/tools/config/index"],
      "@orientbot/apps": ["./packages/apps/src/index"],
      "@orientbot/eval": ["./packages/eval/src/index"],
      "@orientbot/cli": ["./packages/cli/src/index"],
      "@orientbot/test-utils": ["./packages/test-utils/src/index"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
