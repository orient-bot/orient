{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 9am on monday"],
  "timezone": "Asia/Jerusalem",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "description": "Auto-merge minor/patch for most packages",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Manual review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"]
    },
    {
      "description": "Manual review for AI/WhatsApp SDKs",
      "matchPackagePatterns": ["@anthropic-ai/*", "baileys", "@modelcontextprotocol/*"],
      "automerge": false,
      "labels": ["needs-review"]
    },
    {
      "description": "Group all non-major dev dependency updates",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "dev-dependencies",
      "automerge": true
    }
  ]
}
