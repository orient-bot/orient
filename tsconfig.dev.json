{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@orient-bot/core": ["./packages/core/src/index"],
      "@orient-bot/core/*": ["./packages/core/src/*"],
      "@orient-bot/database": ["./packages/database/src/index"],
      "@orient-bot/database/*": ["./packages/database/src/*"],
      "@orient-bot/database-services": ["./packages/database-services/src/index"],
      "@orient-bot/database-services/*": ["./packages/database-services/src/*"],
      "@orient-bot/agents": ["./packages/agents/src/index"],
      "@orient-bot/agents/*": ["./packages/agents/src/*"],
      "@orient-bot/integrations": ["./packages/integrations/src/index"],
      "@orient-bot/integrations/*": ["./packages/integrations/src/*"],
      "@orient-bot/bot-whatsapp": ["./packages/bot-whatsapp/src/index"],
      "@orient-bot/bot-whatsapp/*": ["./packages/bot-whatsapp/src/*"],
      "@orient-bot/bot-slack": ["./packages/bot-slack/src/index"],
      "@orient-bot/bot-slack/*": ["./packages/bot-slack/src/*"],
      "@orient-bot/mcp-tools": ["./packages/mcp-tools/src/index"],
      "@orient-bot/mcp-tools/*": ["./packages/mcp-tools/src/*"],
      "@orient-bot/mcp-servers": ["./packages/mcp-servers/src/index"],
      "@orient-bot/mcp-servers/*": ["./packages/mcp-servers/src/*"],
      "@orient-bot/apps": ["./packages/apps/src/index"],
      "@orient-bot/apps/*": ["./packages/apps/src/*"],
      "@orient-bot/test-utils": ["./packages/test-utils/src/index"],
      "@orient-bot/test-utils/*": ["./packages/test-utils/src/*"],
      "@orient-bot/dashboard": ["./packages/dashboard/src/index"],
      "@orient-bot/dashboard/*": ["./packages/dashboard/src/*"],
      "@orient-bot/api-gateway": ["./packages/api-gateway/src/index"],
      "@orient-bot/api-gateway/*": ["./packages/api-gateway/src/*"]
    }
  },
  "include": ["src/**/*", "packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__/**",
    "packages/dashboard-frontend/**"
  ]
}
