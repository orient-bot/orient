# =============================================================================
# Orient - Production Environment Variables Example
# =============================================================================
# Copy this file to .env.production and fill in your values.
# Never commit .env.production to version control!
#
# For deployment, these values must also be set as GitHub Secrets.
# =============================================================================

# =============================================================================
# Server Configuration
# =============================================================================
OCI_HOST=152.70.172.33
OCI_USER=opc

# =============================================================================
# Domain Configuration
# =============================================================================
# These are used by docker-compose.prod.yml for SSL certificate paths
ORIENT_APP_DOMAIN=app.orient.bot
ORIENT_CODE_DOMAIN=code.orient.bot
ORIENT_STAGING_DOMAIN=staging.orient.bot
ORIENT_CODE_STAGING_DOMAIN=code-staging.orient.bot

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=aibot
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=whatsapp_bot
DATABASE_URL=postgresql://aibot:your-secure-password@postgres:5432/whatsapp_bot

# Staging database (uses _STAGING suffix for compose vars)
POSTGRES_DB_STAGING=whatsapp_bot_staging

# =============================================================================
# Dashboard Security
# =============================================================================
# REQUIRED - Dashboard will crash without this
# Generate with: openssl rand -hex 32
DASHBOARD_JWT_SECRET=your-32-character-or-longer-secret-here
DASHBOARD_JWT_SECRET_STAGING=your-staging-jwt-secret-here

# =============================================================================
# API Keys
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# Optional: Admin/billing keys for usage tracking
ANTHROPIC_ADMIN_KEY=
OPENAI_BILLING_KEY=

# =============================================================================
# OAuth Configuration
# =============================================================================
# Atlassian MCP OAuth
# Register at: https://developer.atlassian.com
OAUTH_CALLBACK_URL=https://app.orient.bot/oauth/callback

# Google OAuth
# Register at: https://console.cloud.google.com → APIs & Services → Credentials
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH_CALLBACK_URL=https://app.orient.bot/oauth/google/callback

# =============================================================================
# Cloudflare R2 Storage
# =============================================================================
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=orient-media
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# =============================================================================
# Slack Integration (Optional)
# =============================================================================
# Create Slack app at: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-...

# Optional: Standup channel for scheduled messages
SLACK_STANDUP_CHANNEL=C0123456789

# =============================================================================
# WhatsApp Cloud API (Optional)
# =============================================================================
# For Meta WhatsApp Business API
# Configure at: https://developers.facebook.com
WHATSAPP_CLOUD_API_ENABLED=false
WHATSAPP_CLOUD_API_PHONE_NUMBER_ID=
WHATSAPP_CLOUD_API_ACCESS_TOKEN=
WHATSAPP_CLOUD_API_BUSINESS_ACCOUNT_ID=
WHATSAPP_CLOUD_API_WEBHOOK_VERIFY_TOKEN=
WHATSAPP_CLOUD_API_APP_SECRET=

# =============================================================================
# Health Monitoring (Optional)
# =============================================================================
HEALTH_MONITOR_ENABLED=false
HEALTH_MONITOR_SLACK_USER_ID=

# =============================================================================
# Oracle Cloud Infrastructure (OCI)
# =============================================================================
# For OCI CLI/SDK integration
OCI_TENANCY_OCID=ocid1.tenancy.oc1..your-tenancy
OCI_USER_OCID=ocid1.user.oc1..your-user
OCI_FINGERPRINT=your:fingerprint:here
OCI_REGION=eu-frankfurt-1

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
NODE_ENV=production
